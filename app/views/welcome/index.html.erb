<h1>Homepage (All Problems) </h1>
<%= paginate @problems %>


<table>
  <thead>
    <tr>
      <th class="problemtitle">Problem</th>
      <th class="published">Date Published</th>
      <th class="author">Author</th>
      <th class="body">Attempted Solution</th>
    </tr>
  </thead>
  <tbody>
    <% @problems.order(published_date: :desc).each do |problem| %>
    <tr>
      <td class="ftitle"><%= link_to problem.title, problem_path(problem)%></td>
      <td class="fpub"><%= problem.published_date %></td>
      <td class="fauthor"><%= link_to problem.user, problem.user%></td>
      <td class="fbody"><%= truncate(problem.body, length: 200) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @problems %>
